{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme form 'tailwind_2_layout.html.twig' %}

    <div class="mt-16 flex min-h-[calc(100vh-8rem)] items-start justify-center px-4">
        <div class="w-full max-w-md rounded-xl border border-gray-200 bg-white shadow-sm">

            <div class="border-b border-gray-100 px-6 py-5">
                <h1 class="text-center text-xl font-semibold text-gray-900">
                    Edit patient
                </h1>
            </div>

            <div class="px-6 py-6">
                {{ form_start(form, { attr: { class: 'space-y-4' } }) }}

                {{ form_widget(form) }}

                <div class="pt-2">
                    <button
                        type="submit"
                        class="inline-flex w-full items-center justify-center rounded-md
                               bg-gray-900 px-4 py-2.5 text-sm font-medium text-white
                               hover:bg-gray-800
                               focus:outline-none focus:ring-2 focus:ring-gray-900
                               focus:ring-offset-2
                               transition"
                    >
                        Update
                    </button>
                </div>

                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}
