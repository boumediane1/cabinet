{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 py-6 space-y-6">
        <div class="flex items-center justify-between">
            <h1 class="text-xl font-semibold text-gray-800">Patients</h1>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="flex justify-end">
                    <a
                        href="{{ path('app_register') }}"
                        class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700 transition"
                    >
                        Add new patient
                    </a>
                </div>
            {% endif %}
        </div>

        <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-400 text-left font-semibold text-gray-50">
                <tr>
                    <th class="px-4 py-3">Name</th>
                    <th class="px-4 py-3">Birth date</th>

                    {% if is_granted('ROLE_ADMIN') %}
                        <th class="px-4 py-3 text-right">Actions</th>
                    {% endif %}
                </tr>
                </thead>

                <tbody class="divide-y divide-gray-100">
                {% for patient in patients %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">{{ patient.name }}</td>
                        <td class="px-4 py-3">
                            {{ patient.birthDate ? patient.birthDate|date('Y/m/d') : '-' }}
                        </td>

                        {% if is_granted('ROLE_ADMIN') %}
                            <td class="px-4 py-3 text-right space-x-2">
                                <a
                                    href="{{ path('app_patients.edit', { id: patient.id }) }}"
                                    class="text-blue-600 hover:underline text-sm"
                                >
                                    Edit
                                </a>

                                <form
                                    method="post"
                                    action="{{ path('app_patients.delete', { id: patient.id }) }}"
                                    class="inline"
                                    onsubmit="return confirm('Are you sure you want to delete this patient?');"
                                >
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ patient.id) }}">

                                    <button
                                        type="submit"
                                        class="text-red-600 hover:underline text-sm"
                                    >
                                        Delete
                                    </button>
                                </form>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
