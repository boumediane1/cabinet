{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="mt-16 flex justify-center px-4">
        <div class="w-full max-w-md rounded-xl bg-white p-6 shadow-md">

            <h1 class="mb-6 text-center text-2xl font-semibold text-gray-800">
                Sign in
            </h1>

            {% if error %}
                <div class="mb-4 rounded-md bg-red-50 px-4 py-3 text-sm text-red-700">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="space-y-4">

                <div>
                    <label for="username" class="mb-1 block text-sm font-medium text-gray-700">
                        Username
                    </label>
                    <input
                        type="text"
                        id="username"
                        name="_username"
                        value="{{ last_username }}"
                        autocomplete="username"
                        required
                        autofocus
                        class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm
                               focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    >
                </div>

                <div>
                    <label for="password" class="mb-1 block text-sm font-medium text-gray-700">
                        Password
                    </label>
                    <input
                        type="password"
                        id="password"
                        name="_password"
                        autocomplete="current-password"
                        required
                        class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm
                               focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    >
                </div>

                <input
                    type="hidden"
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <button
                    type="submit"
                    class="w-full rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white
                           hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500
                           focus:ring-offset-2 transition"
                >
                    Sign in
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-gray-600">
                Donâ€™t have an account?
                <a
                    href="{{ path('app_register') }}"
                    class="font-medium text-blue-600 hover:text-blue-700"
                >
                    Create patient account
                </a>
            </div>

        </div>
    </div>
{% endblock %}
