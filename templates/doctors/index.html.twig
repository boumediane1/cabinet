{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 py-6 space-y-6">

        <div class="flex items-center justify-between">
            <h1 class="text-xl font-semibold text-gray-800">Doctors</h1>

            <a
                href="{{ path('doctors.create') }}"
                class="rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700 transition"
            >
                Create new Doctor
            </a>
        </div>

        <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50 text-left font-semibold text-gray-600">
                <tr>
                    <th class="px-4 py-3">Name</th>
                    <th class="px-4 py-3">Username</th>
                    <th class="px-4 py-3">Speciality</th>
                    <th class="px-4 py-3 text-right">Actions</th>
                </tr>
                </thead>

                <tbody class="divide-y divide-gray-100">
                {% for doctor in doctors %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">{{ doctor.name }}</td>
                        <td class="px-4 py-3">{{ doctor.username }}</td>
                        <td class="px-4 py-3">{{ doctor.speciality.title }}</td>
                        <td class="px-4 py-3 text-right space-x-2">
                            <a href="{{ path('doctors.edit', {id: doctor.id}) }}" class="text-blue-600 hover:underline">
                                Edit
                            </a>

                            <form
                                method="post"
                                action="{{ path('doctors.delete', {id: doctor.id}) }}"
                                class="inline"
                                onsubmit="return confirm('Are you sure you want to delete this doctor?');"
                            >
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ doctor.id) }}">
                                <button type="submit" class="text-red-600 hover:underline">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
