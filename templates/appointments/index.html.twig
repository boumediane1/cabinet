<div>
    <a href="{{ path('app_appointments.create') }}">Schedule appointment</a>
</div>

<table>
    <thead>
    <tr>
        <th>Patient</th>
        <th>Speciality</th>
        <th>Doctor</th>
        <th>Time</th>
        <th>Confirmation</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    {% for appointment in appointments %}
        <tr>
            <td>{{ appointment.patient.name }}</td>
            <td>{{ appointment.speciality.title }}</td>
            <td>{{ appointment.doctor.name }}</td>
            <td>{{ appointment.time|date('Y/m/d') }}</td>
            <td>
                {% if appointment.confirmed %}
                    <span class="badge bg-success">Confirmed</span>
                {% else %}
                    <span class="badge bg-warning">Pending</span>
                {% endif %}
            </td>
            <td>
                {% if appointment.confirmed %}
                    <button type="button" disabled>Edit</button>
                    <button type="button" disabled>Delete</button>
                {% else %}
                    <a href="{{ path('app_appointments.edit', { id: appointment.id }) }}">
                        Edit
                    </a>

                    <form
                        method="post"
                        action="{{ path('app_appointments.delete', { id: appointment.id }) }}"
                        style="display:inline"
                        onsubmit="return confirm('Are you sure you want to delete this appointment?');"
                    >
                        <input type="hidden" name="_token"
                               value="{{ csrf_token('delete' ~ appointment.id) }}">
                        <button type="submit">Delete</button>
                    </form>
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">No appointments found.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
