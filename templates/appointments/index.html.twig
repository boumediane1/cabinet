{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 py-6 space-y-6">
        <div class="flex justify-between items-center">
            <h1 class="text-xl font-semibold text-gray-800">Appointments</h1>

            {% if is_granted('ROLE_PATIENT') %}
                <div class="flex justify-end">
                    <a
                        href="{{ path('app_appointments.create') }}"
                        class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700 transition"
                    >
                        Schedule appointment
                    </a>
                </div>
            {% endif %}
        </div>

        <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-400">
                <tr class="text-left font-semibold text-gray-50">
                    <th class="px-4 py-3">Patient</th>
                    <th class="px-4 py-3">Speciality</th>
                    <th class="px-4 py-3">Doctor</th>
                    <th class="px-4 py-3">Time</th>
                    <th class="px-4 py-3">Confirmation</th>

                    {% if is_granted('ROLE_PATIENT') or is_granted('ROLE_ADMIN') %}
                        <th class="px-4 py-3 text-right">Actions</th>
                    {% endif %}
                </tr>
                </thead>

                <tbody class="divide-y divide-gray-100">
                {% for appointment in appointments %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">{{ appointment.patient.name }}</td>
                        <td class="px-4 py-3">{{ appointment.speciality.title }}</td>
                        <td class="px-4 py-3">{{ appointment.doctor.name }}</td>
                        <td class="px-4 py-3">{{ appointment.time|date('Y/m/d') }}</td>
                        <td class="px-4 py-3">
                            {% if appointment.confirmed %}
                                <span class="inline-flex rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-700">
                                Confirmed
                            </span>
                            {% else %}
                                <span class="inline-flex rounded-full bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-700">
                                Pending
                            </span>
                            {% endif %}
                        </td>

                        {% if is_granted('ROLE_ADMIN') %}
                            <td class="px-4 py-3 text-right">
                                {% if not appointment.confirmed %}
                                    <form
                                        method="post"
                                        action="{{ path('app_appointments.confirm', { id: appointment.id }) }}"
                                        class="inline"
                                        onsubmit="return confirm('Are you sure you want to confirm this appointment?');"
                                    >
                                        <input
                                            type="hidden"
                                            name="_token"
                                            value="{{ csrf_token('confirm' ~ appointment.id) }}"
                                        >

                                        <button
                                            type="submit"
                                            class="inline-flex items-center rounded-md bg-green-600 px-3 py-1.5 text-xs font-semibold text-white hover:bg-green-700 transition"
                                        >
                                            Confirm
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-gray-400">—</span>
                                {% endif %}
                            </td>

                        {% elseif is_granted('ROLE_PATIENT') %}
                            <td class="px-4 py-3 text-right space-x-2">
                                {% if not appointment.confirmed %}
                                    <a
                                        href="{{ path('app_appointments.edit', { id: appointment.id }) }}"
                                        class="text-blue-600 hover:underline"
                                    >
                                        Edit
                                    </a>

                                    <form
                                        method="post"
                                        action="{{ path('app_appointments.delete', { id: appointment.id }) }}"
                                        class="inline"
                                        onsubmit="return confirm('Are you sure you want to delete this appointment?');"
                                    >
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ appointment.id) }}">
                                        <button type="submit" class="text-red-600 hover:underline">
                                            Delete
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-gray-400">—</span>
                                {% endif %}
                            </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="{{ is_granted('ROLE_PATIENT') ? 6 : 5 }}" class="px-4 py-6 text-center text-gray-500">
                            No appointments found.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
